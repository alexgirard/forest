
<div class="d-flex flex-column justify-content-center align-items-center m-auto">
  <div class="login-form d-flex flex-column justify-content-center align-items-center">
    <%= image_tag('large_logo.png') %>
    <h3 class="py-4 login-title">Forgot your password?</h3>
    <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
      <%= render "devise/shared/error_messages", resource: resource %>

      <div class="field login-in">
        <%= f.label :email %><br />
        <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="actions login-btn py-4">
        <%= f.submit "Send me reset password instructions" %>
      </div>
    <% end %>

    <div class="login-links pt-3 d-flex flex-column justify-content-center align-items-center">
      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>